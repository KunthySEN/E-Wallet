<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.PaymentInformationActivity">
    <include layout="@layout/navigation_bar" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Found"/>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/bank_choosing"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/aba" />
            <TextView
                android:id="@+id/title_bank"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABA"
                android:textColor="@color/blue_sky"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/sub_bank"
                android:layout_marginTop="45dp"
                android:gravity="start"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 100.00"
                android:textColor="@color/default_slet"
                android:textSize="16sp"/>
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charge "
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="17sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction details"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:weightSum="5"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Withdraw to bank"
                    android:layout_gravity="center"
                    android:textColor="@color/dot_disable"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_weight="2.5"
                    android:id="@+id/receive_bank"
                    android:inputType="text"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:hint="Receive"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="5"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount of money"
                    android:textColor="@color/dot_disable"
                    android:textSize="16sp"/>
                <EditText
                    android:maxLength="7"
                    android:textColorHint="@color/blue_sky"
                    android:layout_weight="3"
                    android:id="@+id/amount"
                    android:inputType="number"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:hint="Amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="5"
                android:layout_marginTop="110dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction fee"
                    android:textColor="@color/dot_disable"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_weight="3"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 1.00"
                    android:textColor="@color/blue_sky"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="140dp"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="5"
                android:layout_marginTop="150dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/dot_disable"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/total"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 0.00"
                    android:textColor="@color/blue_sky"
                    android:textSize="17sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/confirm"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/button_style"
        android:text="confirm"/>
</LinearLayout>