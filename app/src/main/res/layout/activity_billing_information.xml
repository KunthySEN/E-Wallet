<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".views.BillingInformationActivity">
    <include layout="@layout/navigation_bar" />
    <LinearLayout
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <TextView
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source of money linked banks"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <LinearLayout
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Recharge free"
                    android:textColor="@color/dot_disable"
                    android:textSize="17sp"/>
                <TextView
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textColor="@color/blue_sky"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="110dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Minimum amount"
                    android:textColor="@color/dot_disable"
                    android:textSize="17sp"/>
                <TextView
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 6.00"
                    android:textColor="@color/blue_sky"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="150dp"
                android:background="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="160dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Maximum amount"
                    android:textColor="@color/dot_disable"
                    android:textSize="17sp"/>
                <TextView
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 900.000"
                    android:textColor="@color/blue_sky"
                    android:textSize="17sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/button_style"
        android:text="Next"/>
</LinearLayout>